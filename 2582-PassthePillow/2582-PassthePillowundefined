    def passThePillow(self, n, time):
        """
        :type n: int
        :type time: int
        :rtype: int
        """
        step = 1
        i = 1
        for j in range(time):
            i += step
            if i == n: 
                step = -1
            if i == 1: 
                step = 1
        return i


